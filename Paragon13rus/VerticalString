function showVerticalMessage(word){
 let result = "", upperCaseString;
 if (!word || typeof(word) !== "string" ){console.log ("write your string")
 
 }else {upperCaseString = word[0].toUpperCase() + word.slice(1, 7)}
 
   for (let char of upperCaseString){
   result += char + "\n";

   }

  console.log(result);
}
showVerticalMessage("strada")